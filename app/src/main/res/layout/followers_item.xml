<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/follower_avatar"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp" />

    <TextView
        android:text="follower_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/follower_name"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="19dp"
        android:layout_alignBottom="@+id/follower_avatar"
        android:layout_toEndOf="@+id/follower_avatar"
        android:layout_marginBottom="10dp" />

    <TextView
        android:text="left likes: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_likes"
        android:layout_alignBaseline="@+id/follower_name"
        android:layout_alignBottom="@+id/follower_name"
        android:layout_toEndOf="@+id/follower_name"
        android:layout_marginStart="22dp" />

    <TextView
        android:text="likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/likes_left_count"
        android:layout_alignBaseline="@+id/left_likes"
        android:layout_alignBottom="@+id/left_likes"
        android:layout_toEndOf="@+id/left_likes"
        android:layout_marginStart="13dp" />

</RelativeLayout>